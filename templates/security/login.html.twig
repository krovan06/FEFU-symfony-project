{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="content-container">
      <div class="login-container">
        <div class="login-content-block">

          <form method="post">

            <div class="container-in-form">

              <div class='login-text'>
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
              </div>

              <div class='username'>
                <label for="username">username</label>
                <input type="username" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
              </div>

              <div class='password'>
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
              </div>

              <div class='sign-btn'>
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
              </div>

                
                

                <input type="hidden" name="_csrf_token"
                      value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                <div class="error-login-block">
                  {% if error %}
                      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                  {% endif %}
                </div>

                <div class="user-is-up">
                  {% if app.user %}
                      <div class="mb-3">
                          You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                      </div>
                  {% endif %}
                </div>
            </div>

          </form>

        </div>
      </div>
    </div>
{% endblock %}
